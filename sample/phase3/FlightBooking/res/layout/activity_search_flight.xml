<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="b07.example.flightbooking.SearchFlightActivity" >

    <TextView
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_flight_msg" />
    
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/flight_number_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/flight_number_edit_text"/>
    
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/submit_flight_number_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="submitFlightNumber"
        android:text="@string/submit_flight_number" />
    
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/origin_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/origin"/>
    
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/destination_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/destination"/>
    
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/departure_date_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/departure_date"
        android:inputType="date"/>
    
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/submit_search_criteria_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="submitFlightSearchCriteria"
        android:text="@string/submit_flight_search_criteria" />
    
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/back_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="goBack"
        android:text="@string/back" />
    
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="backToMenu"
        android:text="@string/backToMenu" />
    
    <TextView
        android:id="@+id/controlling_client_text_view"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>