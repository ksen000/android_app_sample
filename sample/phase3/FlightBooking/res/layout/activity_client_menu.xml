<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="b07.example.flightbooking.ClientMenuActivity" >

    <TextView
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_message" />
    
    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/edit_client_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="editClient"
        android:text="@string/edit_client_button" />
    
    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/book_itinerary_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="findItinerary"
        android:text="@string/addItinerary" />
    
    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/view_booked_itinerary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="viewBookedItinerary"
        android:text="@string/view_booked_itinerary" />
    
    <Button
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="viewShoppingCart"
        android:text="@string/viewShoppingCart" />
    
    <Button
        android:layout_marginTop="3dp"
        android:id="@+id/log_out"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="logOut"
        android:text="@string/log_out" />
    
    <TextView
        android:id="@+id/controlling_client_text_view"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
