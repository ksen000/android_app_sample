<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="b07.example.flightbooking.ShowFlightInfoActivity" >

    <TextView
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:id="@+id/flight_number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:id="@+id/departure_datetime_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:id="@+id/arrival_datetime_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:id="@+id/airline_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:id="@+id/origin_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:id="@+id/destination_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:id="@+id/cost_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:id="@+id/capacity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/edit_flight_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="editFlight"
        android:text="@string/edit_flight_button2" />
    
    <Button
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="viewPassangers"
        android:text="@string/viewPassangers" />
    
    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/back_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="goBack"
        android:text="@string/back" />
    
    <Button
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="backToMenu"
        android:text="@string/backToMenu" />
    
    <TextView
        android:id="@+id/controlling_client_text_view"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
