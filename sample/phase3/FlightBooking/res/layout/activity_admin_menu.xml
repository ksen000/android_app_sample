<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="b07.example.flightbooking.AdminMenuActivity" >
    
    <Button
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="uploadClient"
        android:text="@string/upload_client_button" />
    
    <Button
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="uploadFlight"
        android:text="@string/upload_flight_button" />
    
    <Button
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="controlClient"
        android:text="@string/control_client_button" />
    
    <Button
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="searchClient"
        android:text="@string/search_client_button" />
    
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/edit_flight_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="searchFlight"
        android:text="@string/search_flight_button" />
    
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/book_itinerary_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="searchItinerary"
        android:text="@string/search_itinerary_button" />
    
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/log_out"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="logOut"
        android:text="@string/log_out" />
    
    <TextView
        android:id="@+id/controlling_client_text_view"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
